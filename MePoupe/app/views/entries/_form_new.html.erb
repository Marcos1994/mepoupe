<%= form_for(@entry) do |f| %>
	<% if @entry.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

			<ul>
				<% @entry.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<table>
	<div class="field">
		<%= f.label :titulo %><br>
		<%= f.text_field :titulo, maxlength: "30", placeholder: "TÃ­tulo", required: "required", autofocus: "autofocus" %>
	</div>
	
	<div class="field">
		<%= f.label :tipo %><br>
		<%= f.select :tipo, ([["Despesa", 0], ["Receita", 1]]) %>
	</div>
	
	<div class="field">
		<%= f.label :category_id %><br>
		<%= f.collection_select(:category_id, current_user.categories.order(:titulo) , :id, :titulo , {:prompt => "Selecione a categoria"} ) %>
	</div>
	
	<div class="field">
		<%= f.label :periodicidade %><br>
		<%= f.select  :periodicidade, ([["Avulsa", 0], ["Parcelada", 1], ["Fixa", 2]]) %>
	</div>
	
	<div class="field">
		<%= f.label :descricao %><br>
		<%= f.text_area :descricao, cols: "35", rows: "3" %>
	</div>
	
	<!--------------------------------------------------------------------->
	
	<div class="field">
		<%= f.label :valor %><br>
		<%= f.text_field :valor, maxlength: "12", placeholder: "79,95", required: "required" %>
	</div>
	
	<div class="field">
		<%= f.label :parcelas %><br>
		<%= f.number_field :parcelas %>
	</div>
	
	<div class="field">
		<%= f.label :data %><br>
		<%= f.date_select :data %>
	</div>
	
	<div class="field">
		<%= f.label :confirmacao %><br>
		<%= f.number_field :confirmacao %>
	</div>
	
	<div class="actions">
		<%= f.submit %>
	</div>
	</table>
<% end %>
