<div id="colunaEsquerda">
	<h2>Lan√ßamentos pendentes</h2>
	<table cellspacing="0px">
		<thead>
			<tr>
				<th colspan="2">Titulo</th>
				<th>Valor</th>
				<th>Estado</th>
			</tr>
		</thead>
		<tbody>
			<% current_user.lancamentos_para_efetivar.each do |e| %>
				<% e.parcelas_ate_mes(Date.today).each do |p| %>
					<% if(p.confirmacao != 1) %>
						<%= render "entry_and_part", p: p, e: e %>
					<% end %>
				<% end %>
			<% end %>
		</tbody>
	</table>
</div>


<div id="colunaDireita">
	<h2>Andamento das metas</h2>
	<table cellspacing="0px">
		<thead>
			<tr>
				<th>Meta</th>
				<th>Dias Restantes</th>
			</tr>
		</thead>
		<tbody>
		<% @goals.each do |goal| %>
			<tr>
				<td><%= goal.titulo %></td>
				<td><%= goal.contaDias %></td>
			</tr>
		<% end %>
		</tbody>
	</table>
</div>
	

<%= link_to "Resetar Registros", home_index_path, class: "botao isolado", method: :delete, data: { confirm: "Apagar.Confirma?" } %>