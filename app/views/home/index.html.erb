<div id="colunaEsquerda" style="width: 580px;">
	<h2>Lançamentos pendentes</h2>
	<table cellspacing="0px">
		<thead>
			<tr>
				<th colspan="2">Titulo</th>
				<th>Data</th>
				<th>Valor</th>
				<th>Estado</th>
			</tr>
		</thead>
		<tbody id="entryAndPartHome">
			<%= render "entry_and_part" %>
		</tbody>
	</table> <br>
</div>


<div id="colunaDireita" style="width: 280px;">
	<% @goals.each do |goal| %>
	<% if goal.contaDias > 0 %>
		<h2>Andamento das metas</h2>
		<table cellspacing="0px">
			<thead>
				<tr>
					<th>Meta</th>
					<th>Dias Restantes</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><%= link_to goal.titulo, goal_path(goal) %></td>
					<td align:"center"><%= goal.contaDias %>
            		</td>
				</tr>
			</tbody>
		</table>
	<%else%>
	<h2>Metas concluídas</h2>
		<table cellspacing="0px">
			<thead>
				<tr>
					<th>Meta</th>
					<th>Status</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><%= link_to goal.titulo, goal_path(goal) %></td>
					<td><% if goal.estado == 0 %>
              				<p>Ativa<p></td>
                		<% elsif goal.estado == -1%>
                  			<p>Fechada sem sucesso.<p></td>
                		<% else %>
                  			<p>Fechada com sucesso.</p></td>
            			<%end%></td>
				</tr>
			</tbody>
		</table><br>
	<%end%>
	<%end%>
</div>


<%= link_to "Resetar Registros", home_index_path, class: "botao isolado", method: :delete, data: { confirm: "Categorias, Lançamentos e Metas serão apagados!\nDeseja prosseguir?" } %>