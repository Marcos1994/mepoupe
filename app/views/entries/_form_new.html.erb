<%= form_for(@entry) do |f| %>
	<% if @entry.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

			<ul>
				<% @entry.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
<!-- , maxlength: "30", placeholder: "TÃ­tulo", required: "required", autofocus: "autofocus" -->

		<div class="field">
			<%= label_tag(:titulo, "Titulo") %><br/>
			<%= text_field_tag :titulo %>
		</div>
		
		<div class="field">
			<%= f.label :descricao %><br/>
			<%= f.text_area :descricao, cols: "35", rows: "3" %>
		</div>
		
		<div class="field">
			<%= label_tag(:tipo, "Tipo") %><br/>
			<%= f.select :tipo, ([["Despesa", 0], ["Receita", 1]]) %>
		</div>
		
		<div class="field">
			<%= f.label :category_id %><br/>
			<%= f.collection_select(:category_id, current_user.categories.order(:titulo) , :id, :titulo , {:prompt => "Selecione a categoria"} ) %>
		</div>
		
		<div class="field">
			<%= f.label :periodicidade %><br/>
			<%= f.select  :periodicidade, ([["Avulsa", 0], ["Parcelada", 1], ["Fixa", 2]]) %>
		</div>
		
		<!-------------------------------------------------------------------->
		
		<div class="field">
			<%= label_tag(:valor, "Valor total", id: "valor") %><br/>
			<%= text_field_tag :valor %>
		</div>
		
		<div id="parcelas_field" class="field>
			<%= label_tag :parcelas %><br/>
			<%= number_field_tag :parcelas %>
		</div>
		
		<div class="field">
			<%= label_tag :data %><br/>
			<%= date_select("data", "data", selected: Date.today) %>
		</div>
		
		<div class="field">
			<%= label_tag :confirmacao %><br/>
			<%= select_tag :confirmacao, options_for_select([["Efetivado", 1], ["Nao efetivado", 0]]) %>
		</div>
		
		<div>
			<%= f.submit %>
		</div>
<% end %>
