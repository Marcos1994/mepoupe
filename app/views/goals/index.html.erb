<h1>Metas</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Categoria</th>
      <th>Descricao</th>
      <th>Inicio</th>
      <th>Fim</th>
      <th>Estado</th>
      
      
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td><%= goal.titulo %></td>
        <td class="cor"><div class="corCategoria" style="background-color: <#%= goal.category.cor %>;"></div></td>
        <td><%= goal.descricao %></td>
        <td><%= goal.inicio %></td>
        <td><%= goal.fim %></td>
        <td><%= goal.estado %></td>
        
        <td><%= link_to 'Editar', edit_goal_path(goal), class: "botao isolado" %>
        <%= link_to 'Deletar', goal, method: :delete, data: { confirm: 'Tem certeza?' } , class: "botao isolado"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Criar Meta', new_goal_path , class: "botao isolado"%>
