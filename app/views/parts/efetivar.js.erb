//show de Lan√ßamentos
$('#renderParts').html('<%= escape_javascript render(@entry.parts) %>');
$('#entryAndPartHome').html('<%= escape_javascript render partial: "home/entry_and_part" %>');
$('#entryAndPartCategory').html('<%= escape_javascript (render partial: "categories/entry_and_part", collection: @category) if @category != nil %>');
$('.valorPago').css('width', '<%= @entry.valor_razao_efetivado %>px');
$('#valorEfetivado').html('<%= @entry.valor_efetivado %>');

if(<%= current_user.saldo %> < 0)
{
	$('#estadoSaldo').css('color', 'red');
	$('#estadoSaldo').html('Saldo: -R$<%= current_user.saldo*-1 %>');
}
else if(<%= current_user.saldo %> > 0)
{
	$('#estadoSaldo').css('color', 'green');
	$('#estadoSaldo').html('Saldo: R$<%= current_user.saldo %>');
}
else
{
	$('#estadoSaldo').css('color', 'orange');
	$('#estadoSaldo').html('Saldo: R$<%= current_user.saldo %>');
}