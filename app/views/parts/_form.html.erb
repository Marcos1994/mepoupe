<%= form_for(@part) do |f| %>
	<% if @part.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@part.errors.count, "error") %> prohibited this part from being saved:</h2>

			<ul>
				<% @part.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :valor %><br>
		<%= f.text_field :valor %>
	</div>
	
	<div class="field">
		<%= f.label :data %><br>
		<%= f.date_select :data %>
	</div>
		
	<div class="field">
		<%= label_tag :confirmacao %><br/>
		<%= select_tag :confirmacao, options_for_select([["Efetivado", 1], ["Nao efetivado", 0]]) %>
	</div>
	
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>
