<%= form_for(@category) do |f| %>
	<% if @category.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>

			<ul>
				<% @category.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<p>Título</p>
		<%#= f.label :titulo %>
		<%= f.text_field :titulo, maxlength: "30", placeholder: "Título", required: "required", autofocus: "autofocus" %>
	</div>
	
	<div class="field">
		<p>Cor</p>
		<%= f.color_field :cor %>
	</div>
	
	<div class="field">
		<p>Descrição</p>
		<%= f.text_area :descricao, cols: "35", rows: "3" %>
	</div>
	
	<div class="actions">
		<%= f.submit 'Criar categoria', class: 'botao isolado' %>
	</div>
<% end %>
